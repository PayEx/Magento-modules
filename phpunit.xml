<?xml version="1.0"?>
<phpunit
        colors="true"
        verbose="true"
        bootstrap="app/code/community/EcomDev/PHPUnit/bootstrap.php">
    <testsuite name="PayEx Payments Test Suite">
        <directory suffix=".php">app/code/community/PayEx/Payments/Test</directory>
    </testsuite>
    <filter>
        <whitelist>
            <directory suffix=".php">app/code/community/PayEx/Payments</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="junit" target="var/phpunit/junit.xml" logIncompleteSkipped="false"/>
        <log type="coverage-html" target="cover" charset="UTF-8" yui="true" highlight="true" lowUpperBound="35"
             highLowerBound="70"/>
    </logging>
</phpunit>
